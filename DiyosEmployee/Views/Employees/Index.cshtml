@model List<DiyosEmployee.Models.Domain.EmployeeModel>

<h1>Employees List</h1>

<table class="table">
    <thead>
        <tr> 
            <th>EmpId</th>
            <th>EmpName</th>
            <th>Gender</th>
            <th>DOB</th>
            <th>Place</th>
            @* <th>Photo</th> *@
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var employee in Model)
        {
            <tr>
                <td>@employee.EmpId</td>
                <td>@employee.EmpName</td>
                <td>@employee.Gender</td>
                <td>@employee.DOB.ToString("dd-mm-yyyy")</td>
                <td>@employee.Place</td>
                @* <td>
                    @if (!string.IsNullOrEmpty(employee.PhotoPath))
                    {
                        <img src="@Url.Content("~/photos/" + employee.PhotoPath)" alt="Employee Photo" width="100" height="100" />
                    }
                </td> *@
                <td><a asp-controller="Employees" asp-action="View" asp-route-empId="@employee.EmpId">View</a></td>
            </tr>
        }
    </tbody>
</table>